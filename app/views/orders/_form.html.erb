
<div class = 'container' >
<h2>Customer Order</h2>
    <div class = 'form-group'>
        <%= select("order", "customer_id", Customer.all.collect {|p| [ p.name, p.id ] }, { include_blank: 'select customer' }, :class => 'form-control') %>
    </div>
    <div class = 'form-group'>
        <%= c.label :product, 'Product' %>
        <%= c.text_field :product, :class => "form-control" %>
    </div>
    <div class = 'form-group'>
        <%= c.label :quantity, 'Quantity' %>
        <%= c.text_field :quantity, :class => "form-control" %>
    </div>
    <div class = 'form-group'>
        <%= c.label :price, 'Price' %>
        <%= c.text_field :price, :class => "form-control" %>
    </div>
        <%= c.submit "submit", :class => 'btn btn-primary' %>
</div>

