<table class = 'table'>
<tr>
<td><%= link_to "Back to customers", customers_path %></td>
<td><%= link_to "Customer Order", new_orders_path %></td>
</tr>
</table>

<h2>Orders of <%= @customer.name %> </h2>

<table  class="table">

<tr>
<th>Customer_id</th>
<th>Product</th>
<th>Quantity</th>
<th>Price</th>
<th>Date</th>

</tr>
<% @customer_orders.each do |order| %>
    <tr>
    <td><%= order.customer_id %></td>
    <td><%= order.product %></td>
    <td><%= order.quantity %></td>
    <td><%= order.price %></td>
    <td><%= order.date %></td>
    
    </tr>
    <% end %>
</table>
</body>


